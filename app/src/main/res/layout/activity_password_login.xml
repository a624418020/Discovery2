<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_password_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="milai.meishipintu.com.faxianlite.view.activity.PasswordLoginActivity">
    <include
        layout="@layout/titlebar_title"/>
    <LinearLayout
        android:layout_below="@id/titlebar_title"
        android:id="@+id/ll01"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="17dp"
        android:background="@color/white"

        >
        <EditText
            android:id="@+id/et_tel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="#999999"
            android:gravity="center_vertical"
            android:background="@null"
            android:textSize="14sp"
            android:hint="请输入手机号"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_twenty_one_six"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:background="@null"
            android:textColorHint="#999999"
            android:hint="请输入登录密码"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/ll01"
        android:id="@+id/bt_login"
        android:layout_centerHorizontal="true"
        android:layout_width="342dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray_one_fives_three">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:text="登录"/>
    </RelativeLayout>
</RelativeLayout>
