<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="milai.meishipintu.com.faxianlite.view.activity.OrderActivity">
    <include
        android:id="@+id/titlebar_title"
        layout="@layout/titlebar_title"/>
    <RelativeLayout
        android:layout_below="@id/titlebar_title"
        android:id="@+id/rl_01"
        android:layout_width="match_parent"
        android:layout_height="85dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_location"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店主："
                    android:textSize="13dp"
                    android:textColor="@color/textblack"/>
                <TextView
                    android:id="@+id/tv_People_name"
                    android:layout_toRightOf="@id/tv_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阿花"
                    android:textSize="13dp"
                    android:textColor="@color/textblack"/>
                <TextView
                    android:id="@+id/tv_People_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/gray_one_fives_three"
                    android:textSize="12dp"
                    android:text="13888888888"/>
                <TextView
                    android:id="@+id/tv_People_address"
                    android:layout_below="@id/tv_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/gray_one_fives_three"
                    android:text="江苏 南京 鼓楼 古平岗 紫金智梦园"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_success"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:visibility="gone">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与成功"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10sp"/>
                <TextView
                    android:layout_below="@id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记得安排好时间哦"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_03"
        android:layout_below="@id/rl_01"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="133dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <RelativeLayout
            android:id="@+id/rl_02"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:paddingTop="16dp">
            <ImageView
                android:id="@+id/iv_Commodity_image"
                android:layout_width="75.3dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_marginLeft="111dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_Commodity_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="@color/textblack"
                    android:text="日本设计师井上保美的穿衣基本款..."/>
                <TextView
                    android:id="@+id/tv_Commodity_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_one_fives_three"
                    android:layout_marginTop="9dp"
                    android:text="丹宁牛仔外套女款"/>
                <TextView
                    android:id="@+id/tv_Commodity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_one_fives_three"
                    android:layout_marginTop="5dp"
                    android:text="199 元 × 1"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/vw01"
            android:layout_below="@id/rl_02"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_twenty_one_six"/>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textblack"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:text="数量"/>
            <RelativeLayout
                android:id="@+id/bt_addition"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@color/black">
                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:text="1"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/rl_04"
        android:layout_below="@id/rl_03"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="使用时间"
            android:textSize="12dp"
            android:textColor="@color/one_six_eight"/>
        <TextView
            android:id="@+id/tv_Star_time"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="4月1日-4月30日"
            android:textSize="12dp"
            android:textColor="@color/textblack"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_05"
        android:layout_below="@id/rl_04"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="参与人姓名"
            android:textSize="12dp"
            android:textColor="@color/one_six_eight"/>
        <EditText
            android:id="@+id/ed_name"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:hint="请输入参与者姓名"
            android:textSize="12dp"
            android:textColor="@color/textblack"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_06"
        android:layout_below="@id/rl_05"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="参与人电话"
            android:textSize="12dp"
            android:textColor="@color/one_six_eight"/>
        <EditText
            android:id="@+id/ed_phone"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:hint="请输入手机号"
            android:textSize="12dp"
            android:textColor="@color/textblack"/>
    </LinearLayout>
<RelativeLayout
    android:id="@+id/bt_join"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/black">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:textSize="14sp"
        android:text="立即参与"/>

</RelativeLayout>
</RelativeLayout>
