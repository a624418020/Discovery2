<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registered"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context="milai.meishipintu.com.faxianlite.view.activity.RegisteredActivity">
    <RelativeLayout
        android:id="@+id/rl01"
        android:layout_width="match_parent"
        android:layout_height="210dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_logo_black"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll01"
        android:layout_below="@id/rl01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:textColorHint="#999999"/>
        <RelativeLayout
            android:layout_width="86dp"
            android:layout_height="26dp"
            android:background="@drawable/shape_corner_black"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/textblack"
                android:text="获取验证码"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/vw01"
        android:layout_below="@id/ll01"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_twenty_one_six"/>
    <EditText
        android:id="@+id/et_01"
        android:layout_below="@id/vw01"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColorHint="#999999"
        android:hint="请输入验证码"/>
    <View
        android:id="@+id/vw02"
        android:layout_below="@id/et_01"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_twenty_one_six"/>

    <RelativeLayout
        android:layout_below="@id/vw02"
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray_one_fives_three">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:text="登录"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bt_passwordlogin"
        android:layout_below="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_one_fives_three"
            android:textSize="14sp"
            android:text="密码登录"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="95dp">
        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="11dp"
            android:textColor="@color/gray_one_fives_three"
            android:text="第三方账号快速登录"/>
        <ImageView
            android:id="@+id/iv_04"
            android:layout_below="@id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="14.3dp"
            android:src="@drawable/icon_wechat"/>
        <TextView
            android:layout_below="@id/iv_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="11sp"
            android:textColor="@color/gray_one_fives_three"
            android:text="微信登录"/>
    </RelativeLayout>
</RelativeLayout>

