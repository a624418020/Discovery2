<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registered"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/white"
    tools:context="milai.meishipintu.com.faxianlite.view.activity.RegisteredActivity">
    <RelativeLayout
        android:id="@+id/rl01"
        android:layout_width="match_parent"
        android:layout_height="210dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_logo_black"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll01"
        android:layout_below="@id/rl01"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/et_tel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:background="@null"
            android:hint="请输入手机号"
            android:textColorHint="#999999"/>

            <TextView
                android:id="@+id/bt_verify"
                android:layout_width="86dp"
                android:layout_height="28dp"
                android:background="@drawable/selector_bt_border"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@drawable/selector_text_bt"
                android:text="获取验证码"/>
    </LinearLayout>
    <View
        android:id="@+id/vw01"
        android:layout_below="@id/ll01"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_twenty_one_six"/>

    <EditText
        android:id="@+id/et_verify"
        android:layout_width="match_parent"
        android:layout_below="@id/vw01"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:textColorHint="#999999"
        android:textSize="14sp"
        android:background="@null"
        android:hint="请输入验证码"/>

    <View
        android:id="@+id/vw02"
        android:layout_below="@id/et_verify"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_twenty_one_six"/>

    <TextView
        android:layout_below="@id/vw02"
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:background="@drawable/selector_bt_background"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:text="登录"/>

    <TextView
        android:id="@+id/bt_passwordlogin"
        android:layout_below="@+id/bt_login"
        android:layout_alignParentRight="true"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_one_fives_three"
        android:textSize="14sp"
        android:text="密码登录"/>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="95dp">
        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="11dp"
            android:textColor="@color/gray_one_fives_three"
            android:text="第三方账号快速登录"/>
        <ImageView
            android:id="@+id/bt_weichat_login"
            android:layout_below="@id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="14.3dp"
            android:src="@drawable/icon_wechat"/>
        <TextView
            android:layout_below="@id/bt_weichat_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="11sp"
            android:textColor="@color/gray_one_fives_three"
            android:text="微信登录"/>
    </RelativeLayout>
</RelativeLayout>

