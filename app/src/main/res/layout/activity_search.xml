<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="milai.meishipintu.com.faxianlite.view.activity.SearchActivity">
    <RelativeLayout
        android:id="@+id/rl0"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/three_three_three">

        <TextView
            android:id="@+id/back"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginRight="10dp"
            android:background="@color/black"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/rl_03">
            <RelativeLayout
                android:id="@+id/rl_02"
                android:layout_width="27dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_search"/>
            </RelativeLayout>
            <EditText
                android:id="@+id/et_search"
                android:layout_toRightOf="@id/rl_02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:paddingLeft="8dp"
                android:gravity="center_vertical"
                android:hint="搜索好物件"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:inputType="text"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:textColorHint="#88ffffff"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/rl0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/gray_one_fives_three"
            android:textSize="12sp"
            android:text="热门搜索">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_height="27dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_zhishi"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_roundrectangle"
                    android:layout_centerInParent="true"
                    android:textSize="13dp"
                    android:textColor="@color/textblack"
                    android:text="知食"
                    android:gravity="center"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_dianji"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_roundrectangle"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textColor="@color/textblack"
                    android:text="店记"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_chengshi"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_roundrectangle"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textSize="13dp"
                    android:textColor="@color/textblack"
                    android:text="城事"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_yihui"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_roundrectangle"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textSize="13dp"
                    android:textColor="@color/textblack"
                    android:text="艺会"/>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/gray_one_fives_three"
                android:text="最近搜索"/>
            <ImageView
                android:id="@+id/iv_clear_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_delete"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_result"
        android:layout_below="@id/rl0"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>
    

</RelativeLayout>
