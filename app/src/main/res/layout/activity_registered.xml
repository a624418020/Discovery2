<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registered"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="milai.meishipintu.com.faxianlite.view.activity.RegisteredActivity">
    <include
        android:id="@+id/close"
        layout="@layout/titlebar_close"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp">
        <RelativeLayout
            android:id="@+id/rl01"
            android:layout_width="match_parent"
            android:layout_height="210dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:src="@drawable/pic_logo_black"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll01"
            android:layout_below="@id/rl01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_tel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:textColorHint="#999999"
                android:background="@null"/>
            <RelativeLayout
                android:layout_width="86dp"
                android:layout_height="28dp"
                android:background="@drawable/shape_corner_black"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/bt_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/textblack"
                    android:textSize="12sp"
                    android:text="获取验证码"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/vw01"
            android:layout_below="@id/ll01"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_twenty_one_six"/>
        <EditText
            android:id="@+id/et_vcode"
            android:layout_below="@id/vw01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="#999999"
            android:hint="请输入验证码"
            android:background="@null"/>
        <View
            android:id="@+id/vw02"
            android:layout_below="@id/et_vcode"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_twenty_one_six"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_below="@id/vw02"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="#999999"
            android:hint="请输入登录密码"
            android:background="@null"/>
        <View
            android:id="@+id/vw03"
            android:layout_below="@id/et_password"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_twenty_one_six"/>
        <RelativeLayout
            android:id="@+id/bt_register"
            android:layout_below="@id/vw03"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray_one_fives_three">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:text="注册"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="95dp">
            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="11dp"
                android:textColor="@color/gray_one_fives_three"
                android:text="第三方账号快速登录"/>
            <ImageView
                android:id="@+id/iv_weichat"
                android:layout_below="@id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="14.3dp"
                android:src="@drawable/icon_wechat"/>
            <TextView
                android:layout_below="@id/iv_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="11sp"
                android:textColor="@color/gray_one_fives_three"
                android:text="微信登录"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
