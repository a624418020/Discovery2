<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更换头像"
        android:textSize="17sp"
        android:textColor="#555"
        android:padding="15dp"
        android:background="@drawable/shape_dialog_round_corner_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_dialog_round_corner_bottom">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/untransparent_gray"/>
        <TextView
            android:id="@+id/tv_from_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拍照"
            android:textSize="17sp"
            android:textColor="@color/buttonblue"
            android:padding="13dp"
            android:clickable="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/untransparent_gray"/>
        <TextView
            android:id="@+id/tv_from_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="从相册获取"
            android:textColor="@color/buttonblue"
            android:textSize="17sp"
            android:padding="13dp"
            android:layout_marginBottom="3dp"
            android:clickable="true"
            />
    </LinearLayout>

</LinearLayout>
