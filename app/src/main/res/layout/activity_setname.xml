<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setname"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/two_four_fives"
    tools:context="milai.meishipintu.com.faxianlite.view.activity.SetnameActivity">
    <include
        android:id="@+id/titlebar_title"
        layout="@layout/titlebar_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rl_02"
            android:layout_width="match_parent"
            android:layout_below="@id/vw01"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textColorHint="#999999"
                android:textSize="14sp"
                android:hint="请输入昵称"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/gray_twenty_one_six"/>
    </LinearLayout>

    <TextView
        android:id="@+id/bt_save"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="45dp"
        android:enabled="false"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/selector_bt_background"
        android:layout_centerInParent="true"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:text="保存"/>
</LinearLayout>
